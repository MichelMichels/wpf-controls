    <SolidColorBrush x:Key="Button.MouseOver.Restore.ForegroundBrush.macOS" Color="#27AA35" />
    <SolidColorBrush x:Key="Button.Normal.Close.ForegroundBrush.macOS" Color="#FC5753" />
    <SolidColorBrush x:Key="Button.MouseOver.Close.ForegroundBrush.macOS" Color="#DF4744" />
</ResourceDictionary> 